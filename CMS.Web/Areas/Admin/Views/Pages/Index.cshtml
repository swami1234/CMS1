@model IEnumerable<CMS.Web.ViewModels.PageViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreatePage")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slug)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.SidebarId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Sidebar.Name)
        </td>
        <td>
            @Html.ActionLink("EditPage", "EditPage", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("DeletePage", "DeletePage", new { id=item.Id })
        </td>
    </tr>
}

</table>
